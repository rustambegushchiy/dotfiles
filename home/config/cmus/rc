#===== НАСТРОЙКА ЦВЕТОВ =======================================================#

# Цвета консоли
set color_cmdline_attr=default
set color_cmdline_bg=default
set color_cmdline_fg=default
set color_cur_sel_attr=default
set color_error=lightred
set color_info=lightyellow

# Основные цвета окна
set color_win_attr=default
set color_win_bg=default
set color_win_fg=gray

# Цвета верхней панели
set color_win_title_attr=default
set color_win_title_bg=208
set color_win_title_fg=black

# Цвета панели названия песни
set color_titleline_attr=default
set color_titleline_bg=208
set color_titleline_fg=black

# Цвета панели прогресса песни
set color_statusline_attr=default
set color_statusline_bg=208
set color_statusline_fg=black

# Цвета играющей песни в списке 
set color_win_cur=white
set color_win_cur_attr=bold

# Цвета названия альбома в списке 
set color_trackwin_album_attr=bold
set color_trackwin_album_bg=default
set color_trackwin_album_fg=default

# Цвета разделителя
set color_separator=208

# Цвета наведенного активного элемента 
set color_win_cur_sel_attr=default
set color_win_cur_sel_bg=208
set color_win_cur_sel_fg=black

# Цвета активного наведенного элемента списка (библиотека, плейлист)
set color_win_inactive_cur_sel_attr=default
set color_win_inactive_cur_sel_bg=208
set color_win_inactive_cur_sel_fg=black

# Цвета наведенного элемента списка (библиотека, плейлист)
set color_win_inactive_sel_attr=default
set color_win_inactive_sel_bg=208
set color_win_inactive_sel_fg=black

# Текущая выбранная опция
set color_win_sel_attr=default
set color_win_sel_bg=208
set color_win_sel_fg=black

# Цвета каталогов
set color_win_dir=lightblue

# Цвета непонятно чего :)
set color_statusline_progress_attr=default
set color_statusline_progress_bg=green
set color_statusline_progress_fg=green

